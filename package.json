{
  "name": "pop",
  "version": "1.0.0",
  "description": "A quick way to reuse common template files like .gitignore, webpack.config.js, etc...",
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "build": "pnpm grammar:build && pnpm ts:build",
    "ts:build": "tsc",
    "grammar:build": "nearleyc ./src/parser/qemplate.ne -o ./src/parser/index.ts",
    "grammar:watch": "nodemon --exec \"pnpm grammar:build\" -w ./src/parser/qemplate.ne",
    "start": "node index.js"
  },
  "author": "Sam Carlile <samkcarlile@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "colors": "^1.4.0",
    "commander": "^6.1.0",
    "enquirer": "^2.3.6",
    "handlebars": "^4.7.6",
    "inquirer": "^7.3.3",
    "moo": "^0.5.1",
    "mustache": "^4.0.1",
    "nearley": "^2.19.7"
  },
  "devDependencies": {
    "@types/moo": "^0.5.3",
    "@types/mustache": "^4.0.1",
    "@types/nearley": "^2.11.1",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-problems": "^5.0.0",
    "nodemon": "^2.0.5",
    "typescript": "^4.0.3"
  }
}
